- const title = "romanize-yue"
- const langs = ["emc", "yue", "cmn"]

html
  head
    title= title
    link(rel="stylesheet", href="style.css")

    for lang in langs
        script(src=`data/${lang}.js`)
    script(src="show.js")
    script(src="script.js")

  body
    #head
      input(type="checkbox")#single.trigger
      label single
      input(type="checkbox")#cyrillic.trigger
      label cyrillic
      input(type="checkbox")#uppercase.trigger
      label uppercase
      select#alphabet.trigger
        for value in ["standard", "standard cyrillic", "verbose", "simple", "simple cyrillic", "ASCII", "IPA", "conservative"]
          option(value=value.toLowerCase())= value
    #body
      textarea#source.trigger.
