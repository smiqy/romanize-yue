{
    "manifest_version": 2,
    "name": "romanize-yue",
    "description": "Add the author's original romanization above every Chinese character in a webpage when the button pressed.",
    "version": "1.0",
    "browser_action": {},
    "background": {
        "scripts": ["jquery.min.js", "romanization/yue-standard.js", "romanization/yue-verbose.js", "romanization/cmn-standard.js", "romanization/cmn-simple.js", "background.js"]
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "css": ["style.css"]
    }],
    "permissions": [
        "tabs", "*://*/*"
    ]
}